set daemon 10
# with start delay 10
set logfile syslog facility log_daemon
set idfile /etc/monit/id
set pidfile /etc/monit/pid
set statefile /etc/monit/state
set httpd unixsocket /etc/monit/sock
# SSL ENABLE
# PEMFILE /etc/ssl/certs/monit.pem
# allow monit:admin
  allow localhost

set eventqueue
    basedir /etc/monit/events
    slots 100

include /lib/monit/init/*.conf
